{% extends 'admin/layout.html.twig' %}

    {% block title %}Expense List{% endblock %}

    {% block main %}
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>{{ 'expense.list.title' | trans }}</h1>
            <a href="{{ path('admin_expense_create') }}" class="btn btn-lg btn-success">
                <i class="fa fa-plus" aria-hidden="true"></i> {{ 'expense.create_action'|trans }}
            </a>
        </div>

        {# Flash messages for success or error notifications #}
        {% include 'admin/_partials/_flash_messages.html.twig' %}

        <form method="get" class="mb-4">
            <div class="row align-items-end">
                <div class="col-md-5">
                    <label for="month" class="form-label">Filtrar por mes:</label>
                    <input type="month" id="month" name="month" class="form-control"
                           value="{{ selectedYear and selectedMonth ? selectedYear ~ '-' ~ selectedMonth : '' }}">
                </div>
                <div class="col-md-6 d-flex justify-content-between">
                    <button type="submit" class="btn btn-sm btn-primary">Apply Filter</button>
                    <a href="{{ path('admin_expense_list') }}" class="btn btn-sm btn-secondary">Clear Filter</a>
                </div>
            </div>
        </form>

        {% if selectedMonth %}
            <h3 class="mt-5">Desapesas de {{ selectedMonth }}/{{ selectedYear }}</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Amount</th>
                        <th>Date</th>
                        <th>Account</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for expense in expenses %}
                        <tr>
                            <td>{{ expense.type.name }} - {{ expense.description }}</td>
                            <td>{{ (expense.amount / 100) | number_format(2, ',', '.') }} R$</td>
                            <td>{{ expense.dueDate | date('d/m/Y') }}</td>
                            <td>{{ expense.account.code }}</td>
                            <td>
                                <a href="{{ path('admin_expense_edit', { id: expense.id }) }}"
                                   class="btn custom-btn-xs btn-primary">Edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            {% for month, expenses in expenses %}
                <h2>{{ month|date('F Y') }}</h2>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Account</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for expense in expenses %}
                            <tr>
                                <td>{{ expense.type.name }} - {{ expense.description }}</td>
                                <td>{{ (expense.amount / 100) | number_format(2, ',', '.') }} R$</td>
                                <td>{{ expense.dueDate | date('d/m/Y') }}</td>
                                <td>{{ expense.account.code }}</td>
                                <td>
                                    <a href="{{ path('admin_expense_edit', { id: expense.id }) }}"
                                       class="btn custom-btn-xs btn-primary">Edit</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p>No expenses found for this month.</p>
            {% endfor %}
        {% endif %}
    {% endblock %}

