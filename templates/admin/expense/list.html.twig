{% extends 'admin/layout.html.twig' %}

{% block title %}{{ 'expense.list.title'|trans }}{% endblock %}

{# Configure admin layout header elements #}
{% block page_title %}{{ 'expense.list.title'|trans }}{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item active" aria-current="page">{{ 'expense.list.title'|trans }}</li>
{% endblock %}

{% block page_actions %}
    <a href="{{ path('admin_expense_create') }}" class="btn btn-primary"> {# Changed to btn-primary for consistency, adjust if btn-success is preferred #}
        <twig:ux:icon name="tabler:plus" class="me-1"/> {{ 'expense.create_action'|trans }}
    </a>
{% endblock %}

{% block main_column_class %}col-12{% endblock %}
{% block sidebar %}{% endblock %}


{% block admin_page_content %}
    {# Flash messages are included by admin/layout.html.twig, so the include below can be removed #}
    {# {% include 'admin/_partials/_flash_messages.html.twig' %} #}

    <div class="card card-body mb-4"> {# Filter form wrapped in a card for better styling #}
        <form method="get">
            <div class="row align-items-end g-2"> {# g-2 for gutters #}
                <div class="col-md-5">
                    <label for="month" class="form-label">{{ 'expense.filter_by_month'|trans }}:</label>
                    <input type="month" id="month" name="month" class="form-control form-control-sm"
                           value="{{ selectedYear and selectedMonth ? selectedYear ~ '-' ~ selectedMonth|format_number({min_integer_digit: 2}) : '' }}">
                </div>
                <div class="col-md-auto">
                    <button type="submit" class="btn btn-sm btn-secondary">{{ 'filter.apply'|trans }}</button> {# Assuming translation key #}
                </div>
                <div class="col-md-auto">
                    <a href="{{ path('admin_expense_list') }}" class="btn btn-sm btn-outline-secondary">{{ 'filter.clear'|trans }}</a> {# Assuming translation key #}
                </div>
            </div>
        </form>
    </div>

    {% if selectedMonth is defined and selectedMonth %} {# Check if selectedMonth is defined before using it #}
        <div class="card">
            <div class="card-header">
                <h3 class="card-title mb-0">{{ 'expense.list.for_month'|trans({'%month%': selectedMonth, '%year%': selectedYear}) }}</h3> {# Assuming translation key #}
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead>
                    <tr>
                        <th>{{ 'expense.field.description'|trans }}</th>
                        <th>{{ 'expense.field.amount'|trans }}</th>
                        <th>{{ 'expense.field.date'|trans }}</th>
                        <th>{{ 'expense.field.account'|trans }}</th>
                        <th>{{ 'actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for expense in expenses %}
                        <tr>
                            <td>{{ expense.type.name|default('') }} - {{ expense.description }}</td>
                            <td>{{ (expense.amount / 100) | number_format(2, ',', '.') }} R$</td>
                            <td>{{ expense.dueDate | date('d/m/Y') }}</td>
                            <td>{{ expense.account.code|default('') }}</td>
                            <td>
                                <a href="{{ path('admin_expense_edit', { id: expense.id }) }}"
                                   class="btn custom-btn-xs btn-outline-primary">
                                    <twig:ux:icon name="tabler:edit" class="me-1"/>{{ 'action.edit'|trans }}
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center">{{ 'expense.list.no_expenses_for_month'|trans }}</td> {# Assuming translation key #}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% else %}
        {# Assuming expenses_by_month is passed when no specific month is selected #}
        {% for month_year, month_expenses in expenses_by_month|default([]) %}
            <div class="card mb-4">
                <div class="card-header">
                    {# Assuming month_year is a DateTime object or a string that date filter can parse #}
                    <h3 class="card-title mb-0">{{ month_year|date('F Y') }}</h3>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead>
                        <tr>
                            <th>{{ 'expense.field.description'|trans }}</th>
                            <th>{{ 'expense.field.amount'|trans }}</th>
                            <th>{{ 'expense.field.date'|trans }}</th>
                            <th>{{ 'expense.field.account'|trans }}</th>
                            <th>{{ 'actions'|trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for expense in month_expenses %}
                            <tr>
                                <td>{{ expense.type.name|default('') }} - {{ expense.description }}</td>
                                <td>{{ (expense.amount / 100) | number_format(2, ',', '.') }} R$</td>
                                <td>{{ expense.dueDate | date('d/m/Y') }}</td>
                                <td>{{ expense.account.code|default('') }}</td>
                                <td>
                                    <a href="{{ path('admin_expense_edit', { id: expense.id }) }}"
                                       class="btn btn-sm btn-outline-primary">
                                        <twig:ux:icon name="tabler:edit" class="me-1"/>{{ 'action.edit'|trans }}
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center">{{ 'expense.list.no_expenses_this_month'|trans }}</td> {# Assuming translation key #}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% else %}
            <div class="alert alert-info">{{ 'expense.list.no_expenses_found'|trans }}</div> {# Assuming translation key #}
        {% endfor %}
    {% endif %}
{% endblock %}
