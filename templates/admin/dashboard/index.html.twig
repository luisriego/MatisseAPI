{% extends 'admin/layout.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block page_title %}Dashboard{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
{% endblock %}

{% block admin_page_content %}
    <div class="row">
        {# Despesas Recorrentes Totais #}
        <div class="col-sm-6 col-lg-6 mb-3">
            <div class="card text-bg-primary">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        Despesas fixas mês corrente
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <twig:ux:icon name="tabler:repeat" class="fs-1"/>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            {% if totalRecurringExpenses > 1 %}
                                <h3 class="card-title mb-1 float-end">{{ totalRecurringExpenses }} aplicáveis</h3>
                            {% else %}
                                <h3 class="card-title mb-1 float-end">{{ totalRecurringExpenses }} aplicável</h3>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <a href="{{ path('admin_recurring_expense_index') }}" class="card-footer small text-decoration-none text-white">
                    Ver Lista <twig:ux:icon name="tabler:eye" class="float-end"/>
                </a>
                <a href="{{ path('admin_recurring_expense_generate') }}" class="card-footer small text-decoration-none text-white">
                    Incluir despesa fixa <twig:ux:icon name="tabler:plus" class="float-end"/>
                </a>
            </div>
        </div>

        {# Tipos de Despesa #}
        <div class="col-sm-6 col-lg-6 mb-3">
            <div class="card text-bg-info">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <twig:ux:icon name="tabler:tags" class="me-1"/> Tipo de Despesa {{ totalExpenseTypes }}
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <twig:ux:icon name="tabler:tags" class="fs-1"/>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h3 class="card-title mb-1">{{ totalExpenseTypes }}</h3>
                            <p class="card-text small">Tipos de Despesa</p>
                        </div>
                    </div>
                </div>
                <a href="{{ path('admin_expense_type_index') }}" class="card-footer small text-decoration-none text-white">
                    Ver Tipos <twig:ux:icon name="tabler:eye" class="float-end"/>
                </a>
                <a href="" class="card-footer small text-decoration-none text-white"> {# Ajustar este link si es necesario #}
                    Ver contas <twig:ux:icon name="tabler:eye" class="float-end"/>
                </a>
            </div>
        </div>

        {# Total de Despesas (No Recorrentes) #}
        <div class="col-sm-12 col-lg-12 mb-3">
            <div class="card text-bg-danger">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        Despesas mês corrente
                        <small class="float-end">{{ totalExpenses }}</small>
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <twig:ux:icon name="tabler:receipt-2" class="fs-1"/>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h3 class="card-title mb-1 float-end">R$ {{ (totalExpensesInCents / 100)|number_format(2, ',', '.') }}</h3>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-body text-black">
                    {% include 'admin/_partials/_expense_table.html.twig' with {
                    'expenses_list': expenses,
                    'table_theme': 'dark',
                    'no_expenses_message_key': 'expense.list.no_expenses_for_month'
                    } %}
                </div>
            </div>
        </div>
    </div>

