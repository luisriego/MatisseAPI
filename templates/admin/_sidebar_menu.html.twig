{# templates/admin/_sidebar_menu.html.twig #}
{# Usando clases de Bootstrap para una lista de navegación vertical #}

{# Dashboard #}
<li class="nav-item">
    <a href="{{ path('admin_dashboard') }}" class="nav-link {% if app.request.attributes.get('_route') == 'admin_dashboard' %}active{% endif %}">
        <twig:ux:icon name="tabler:dashboard" class="me-2"/>Dashboard
    </a>
</li>

{# Separador opcional #}
<li class="nav-heading mt-3 mb-1 text-muted small text-uppercase">Gestão Principal</li>

{# Despesas Recorrentes #}
<li class="nav-item">
    <a href="{{ path('admin_recurring_expense_index') }}" class="nav-link {% if app.request.attributes.get('_route') starts with 'admin_recurring_expense_' %}active{% endif %}">
        <twig:ux:icon name="tabler:repeat" class="me-2"/>Gastos fixos
    </a>
</li>

<li class="nav-item">
    <a href="{{ path('admin_expense_type_index') }}" class="nav-link {% if app.request.attributes.get('_route') starts with 'admin_expense_type_' %}active{% endif %}">
        <twig:ux:icon name="tabler:tags" class="me-2"/>Tipos de Despesa
    </a>
</li>


{# Receitas #}
<li class="nav-item">
    <a class="nav-link {% if app.request.attributes.get('_route') starts with 'admin_income_' %}active{% endif %}" href="{{ path('admin_income_list') }}">
        <twig:ux:icon name="tabler:cash" class="me-2"/> Receitas
    </a>
</li>

{# Despesas (No recurrentes) #}
<li class="nav-item">
    <a class="nav-link {% if app.request.attributes.get('_route') starts with 'admin_expense_' and not (app.request.attributes.get('_route') starts with 'admin_expense_type_') %}active{% endif %}" href="{{ path('admin_expense_list') }}">
        <twig:ux:icon name="tabler:receipt-2" class="me-2"/> Despesas
    </a>
</li>


{# Separador opcional #}
<li class="nav-heading mt-3 mb-1 text-muted small text-uppercase">Ferramentas</li>

{# Gerar Boletos #}
<li class="nav-item">
    {% set isActive = (app.request.attributes.get('_route') == 'admin_slip_generation') %}
    <a class="nav-link {% if isActive %}active{% endif %}"
       href="{{ path('admin_slip_generation') }}"
       {% if isActive %}style="color: #0d6efd !important; background-color: transparent !important;"{% endif %}>
        <twig:ux:icon name="tabler:brand-cashapp" class="me-2"/> Gerar Boletos
    </a>
</li>

{# Puedes añadir más enlaces aquí si es necesario #}
