{# templates/admin/recurring_expense/new.html.twig #}
{% extends 'admin/layout.html.twig' %}

{% block title %}Nova Despesa Recorrente{% endblock %}

{% block page_title %}Nova Despesa Recorrente{% endblock %} {# O el bloque que uses en tu layout para el título principal de la página #}

{% block main %}
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Criar Despesa Recorrente</h3>
        </div>
        <div class="card-body">
            {# Renderiza el fragmento del formulario #}
            {% include 'admin/recurring_expense/_form.html.twig' with {'form': form} %}
        </div>
    </div>
{% endblock %}


{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_expense_list') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-list" aria-hidden="true"></i> {{ 'expense.list_action'|trans }}
        </a>
    </div>

    {{ parent() }}
{% endblock %}
